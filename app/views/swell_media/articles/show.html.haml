- cache( @media ) do
	%p.meta
		= @media.author
		on 
		= @media.publish_at.to_date.to_s( :long )
		- if @media.category.present?
			in
			= link_to @media.category, blog_index_path( category: @media.category )
		%i.link-spacer
		%i.fa.fa-bookmark
		About a 
		= @media.reading_time[:minutes_only]
		minute read.

	%h1
		= @media.title

	- if @media.subtitle.present?
		%p.subtitle
			= @media.subtitle


			- if @media.avatar.present?
				= image_tag @media.avatar, class: 'img-responsive'

	%p
		= raw @media.content



	- if @media.is_commentable?
		%section#comments{ style: 'margin-top:2em;' }
			= render 'application/disqus'



