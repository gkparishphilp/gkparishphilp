- cache( @media ) do
	.blog
		.blog-desc
			%h3
				%a{ href: @media.url } 
					= @media.title
			%hr
			%p.text-muted
				= @media.user.avatar_tag( width: 36 )
				by 
				= @media.user
				on 
				= @media.publish_at.to_date.to_s( :long )

				= render 'application/fb_like_button', url: @media.url

			- if @media.avatar.present?
				= image_tag @media.avatar, class: 'img-responsive'

		.article-body
			= raw @media.content

	- if @media.is_commentable?
		%section#comments{ style: 'margin-top:2em;' }
			= render 'application/disqus'



