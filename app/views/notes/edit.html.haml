


.container-fluid
	.row
		.col-xs-10
			%ul.breadcrumb
				%li
					= link_to 'Admin', admin_index_path
				%li
					= link_to 'Notes', main_app.admin_notes_path
				%li
					%strong
						Edit
						= @media.title
		.col-xs-2
				
	= form_for @media, as: :note, url: main_app.note_path( @media ) do |f|
		.row
			.col-xs-8
				.form-group
					= f.text_field :title, class: 'form-control input-lg'
				.form-group
					= f.text_area :content, class: 'form-control editor-full', rows: 12


			.col-xs-4
				.well
					.form-group
						= f.label :publish_at
						= f.text_field :publish_at, value: @media.publish_at.to_s( :full_time ), class: 'form-control datepicker'
					.form-group
						= f.label :tag_list, 'Tags:'
						= f.text_field :tag_list, placeholder: 'Separate tags with commas', class: 'form-control'
					.form-group
						= f.submit 'Update', class: 'btn btn-primary'